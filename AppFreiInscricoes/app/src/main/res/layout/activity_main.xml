<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_inicio"
    tools:context=".telas.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="60dp">

            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="30dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/campo_foto"
                    android:src="@drawable/img_logo_trasparent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:id="@+id/lblNomeFrei"
                    android:textSize="15sp"
                    android:text="Instituto Social\nNossa Senhora de Fátima"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:shadowColor="@color/cinza"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:text="Olá, "
                        android:textColor="@color/Branco"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/lblBoasVindas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:shadowColor="@color/cinza"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:text="Bruno!"
                        android:textColor="@color/Branco"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnlInscricoesStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/lblFraseInscricao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="As Inscrições começaram !"
                    android:textColor="@color/Branco"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblInscricoesAbertas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:text="Fique atento. O prazo final é"
                    android:textColor="@color/Branco"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutPrincipal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingTop="30dp"
                android:paddingRight="12dp"
                android:visibility="visible"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_weight="50"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/lnlAbertura"
                                android:layout_width="match_parent"
                                android:layout_height="82dp"
                                android:background="@drawable/item_menu"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="15dp">

                                <ImageView
                                    android:id="@+id/imgAbertura"
                                    android:layout_width="25dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/youtube" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="Abertura"
                                        android:textColor="@color/cinza"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="Assista ao vídeo"
                                        android:textColor="@color/cinza"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />


                                </LinearLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/layoutInscricao"
                                android:layout_width="match_parent"
                                android:layout_height="82dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/item_menu"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="15dp">

                                <ImageView
                                    android:id="@+id/imgInscricao"
                                    android:layout_width="25dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/pen" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="Pré-Inscrição"
                                        android:textColor="@color/cinza"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/lblInscricao"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="Realizar inscrição"
                                        android:textColor="@color/cinza"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_faq"
                                android:layout_width="match_parent"
                                android:layout_height="82dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/item_menu"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="15dp">

                                <ImageView
                                    android:id="@+id/imgFaq"
                                    android:layout_width="25dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/question" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="Faq"
                                        android:textColor="@color/cinza"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="Dúvidas comuns"
                                        android:textColor="@color/cinza"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />

                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="50"
                            android:gravity="right"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/layout_cursos"
                                android:layout_width="match_parent"
                                android:layout_height="82dp"
                                android:background="@drawable/item_menu"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="15dp">

                                <ImageView
                                    android:id="@+id/imgCursos"
                                    android:layout_width="25dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/exam" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="Cursos"
                                        android:textColor="@color/cinza"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="Conheça os cursos"
                                        android:textColor="@color/cinza"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />


                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_status"
                                android:layout_width="match_parent"
                                android:layout_height="82dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/item_menu"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="15dp">

                                <ImageView
                                    android:id="@+id/imgStatusInscricao"
                                    android:layout_width="25dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/contract" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="Acompanhar"
                                        android:textColor="@color/cinza"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="Minha inscrição"
                                        android:textColor="@color/cinza"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_instituto"
                                android:layout_width="match_parent"
                                android:layout_height="82dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/item_menu"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="15dp">

                                <ImageView
                                    android:id="@+id/imgSobre"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/img_logo_trasparent_cortado" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="Instituto"
                                        android:textColor="@color/cinza"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="Entre em contato"
                                        android:textColor="@color/cinza"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />=
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutLoad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgLoad"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="5dp"
                    android:background="@drawable/item_menu"
                    android:src="@drawable/load_principal"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/Branco"
        app:headerLayout="@layout/cbl_menu"
        app:itemIconTint="@color/colorPrimary"
        app:itemTextColor="@color/Preto"
        app:menu="@menu/mnu_principal">

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>