<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_container"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:paddingBottom="16dp"
        android:id="@+id/lnlCurso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:background="@drawable/card_bg"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lnlCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/Branco">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="10"
                        android:id="@+id/lblPergunta"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:padding="16dp"
                        android:textColor="@color/Preto"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgArrow"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="32dp"
                            android:src="@drawable/ic_arrow_down"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/expandableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:padding="12dp"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/lblResposta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="18dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/Preto"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/campo_foto"
        app:layout_constraintTop_toTopOf="@+id/lnlCurso"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/lblPos"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_width="21dp"
            android:textColor="@color/colorPrimary"
            android:text="20"
            android:maxLines="1"
            android:gravity="center"
            android:layout_height="24dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

