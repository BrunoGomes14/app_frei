<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_principal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".telas.FrmCadastroLoginConcluido"
    android:background="@color/Branco"
    android:orientation="vertical">

    <include layout="@layout/toolbar" android:id="@+id/toolbar"/>

    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/img_concluido"
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Pré-Inscrição\nRealizada com sucesso."
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/Preto"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp"
            android:text="@string/texto_concluido"/>

        <TextView
            android:id="@+id/lblCodInscricao"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnAbrirInfo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_rounded"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informações da inscrição"
            android:textSize="15dp"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>